# =============================================================================
# Screeps Grafana Stack Configuration
# =============================================================================

# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=admin

# Screeps API Token (required)
# Get from https://screeps.com/a/#!/account/auth-tokens
SCREEPS_TOKEN=your-screeps-token-here

# Shards to monitor
# - Single: shard3
# - Multiple: shard0,shard1,shard2,shard3
# - Auto-discover: all (recommended - auto-scales to active shards only)
SCREEPS_SHARDS=all

# Polling interval in milliseconds
# 15000 (15s) = good resolution, stays well under rate limits
POLL_INTERVAL=15000

# =============================================================================
# Advanced options (usually don't need to change)
# =============================================================================

# Stats source: 'memory' or 'segment'
# memory = reads from Memory.stats (default, works with your stats.js)
# segment = reads from RawMemory.segments[STATS_SEGMENT]
STATS_SOURCE=memory
STATS_PATH=stats
STATS_SEGMENT=30

# Metrics prefix in Graphite
METRICS_PREFIX=screeps

# Include shard name in metric path
# false = screeps.cpu.used (simpler, recommended for single shard)
# true  = screeps.shard3.cpu.used (needed for multi-shard dashboards)
INCLUDE_SHARD_IN_PATH=false

# =============================================================================
# Grafana Settings
# =============================================================================

# Grafana URL (for proper link generation)
GRAFANA_URL=http://localhost:3000

# Port to expose Grafana on (when not using Traefik)
GRAFANA_PORT=3000

# =============================================================================
# Traefik Integration (optional)
# =============================================================================

# Enable Traefik reverse proxy
TRAEFIK_ENABLE=false

# Hostname for Traefik routing
GRAFANA_HOST=screeps.example.com

# Traefik settings
TRAEFIK_ENTRYPOINT=websecure
TRAEFIK_TLS=true
TRAEFIK_CERTRESOLVER=letsencrypt

# Middlewares (comma-separated, e.g., authelia@file)
TRAEFIK_MIDDLEWARES=
